<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <TextView
            android:text="选择提醒类别"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="#F0F0F0"
            android:id="@+id/v"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_65dp"
            android:layout_height="@dimen/size_1dp"/>


        <RadioGroup
            android:id="@+id/rg"
            android:layout_below="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <RadioButton
                android:id="@+id/radio1"
                android:text="任意消费金额"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_90dp">

                <RadioButton
                    android:layout_centerVertical="true"
                    android:id="@+id/radio2"
                    android:text="达到消费金额提醒"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_amount"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入金额"
                    android:layout_toRightOf="@+id/radio2"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:textSize="@dimen/size_14dp" />
            </RelativeLayout>

        </RadioGroup>


        <View
            android:layout_below="@+id/rg"
            android:layout_width="match_parent"
            android:background="#F0F0F0"
            android:id="@+id/v1"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_45dp"
            android:layout_height="@dimen/size_1dp"/>


        <TextView
            android:id="@+id/tv_ok"
            android:layout_below="@+id/v1"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="@dimen/size_100dp"
            android:gravity="center"
            android:background="@drawable/confirm_dialog_bg"
            android:text="确认"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>
</LinearLayout>