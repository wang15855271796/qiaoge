<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_item_team"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@color/app_bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_team_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_open_arrow"
            android:gravity="center_vertical"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_item_team_spec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:textColor="@color/app_cancle_gray"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_team_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_cancle_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_item_team_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/app_cancle_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_item_team_inven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_cancle_gray"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>