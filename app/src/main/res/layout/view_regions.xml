<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">

        <TextView
            android:text="请选择发布位置"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="@dimen/size_8dp"
            android:id="@+id/iv_close"
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_login_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp">

        <TextView
            android:text="当前位置:"
            android:id="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_provice"
            android:layout_toRightOf="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_city"
            android:layout_toRightOf="@+id/tv_provice"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/no_color"
            android:layout_weight="1"
            android:scrollbars="none"
            android:dividerHeight="1px"
            android:divider="#eeeeee"
            android:background="@color/white" >
        </ListView>


        <View
            android:background="#cccccc"
            android:layout_width="@dimen/public_space_value_0.5"
            android:layout_height="match_parent"/>

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/no_color"
            android:layout_weight="1"
            android:scrollbars="none"
            android:dividerHeight="1px"
            android:divider="#eeeeee"
            android:background="@color/white" >

        </ListView>
    </LinearLayout>


    <ListView
        android:id="@+id/listView3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/no_color"
        android:layout_weight="1"
        android:divider="@null"
        android:background="#fff" >
    </ListView>

</LinearLayout>