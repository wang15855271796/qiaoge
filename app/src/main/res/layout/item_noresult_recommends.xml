<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_group"
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_no_data"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="@dimen/size_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热狗香肠真棒热狗香肠"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_toRightOf="@+id/rl"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_spec"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sp_12"
                    tools:text="规格：300g/500g/800g"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_stock_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="库存：300"
                    android:layout_below="@+id/tv_spec"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_below="@+id/tv_stock_total"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_price"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥100.00—￥100.00"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/size_12dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@+id/iv_close"
                        android:textColor="#FF680A"
                        android:layout_toRightOf="@+id/rl"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_12dp"
                        android:visibility="gone"
                        android:textColor="#FF680A"
                        android:textSize="@dimen/sp_14"
                        android:text="价格授权后可见"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_below="@+id/ll_price"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="销量：300"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="@dimen/size_12dp"
                        android:layout_toLeftOf="@+id/iv_close"
                        android:textColor="#666"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/rl_spec"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:background="@drawable/shape_orange_radius_11"
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="@dimen/size_26dp">

                        <TextView
                            android:id="@+id/tv_choose_spec"
                            android:text="选规格"
                            android:textColor="#fff"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:textSize="@dimen/size_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_price"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:background="@drawable/shape_orange_radius_11"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_26dp">

                        <TextView
                            android:text="获取授权"
                            android:textColor="#fff"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:textSize="@dimen/size_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </RelativeLayout>

                <!--次日达 隔日送图标-->

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_next"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:layout_below="@+id/rl1"
                    tools:src="@mipmap/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_operate"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_toRightOf="@+id/iv_next"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:layout_below="@+id/rl1"
                    tools:src="@mipmap/icon_operate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_after_next"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:layout_below="@+id/rl1"
                    android:src="@mipmap/icon_after_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:background="#eeeeee"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="@dimen/size_12dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>