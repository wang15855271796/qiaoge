<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_pic"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/size_82dp"
            android:layout_height="@dimen/size_82dp" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/iv_pic"
            android:id="@+id/tv_name"
            android:textSize="9sp"
            android:textColor="#676767"
            android:text="翘歌玉米蔬菜猪..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_name"
            android:textSize="9sp"
            android:id="@+id/tv_sale"
            android:textColor="#676767"
            android:text="销量：30000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_sale"
            android:id="@+id/tv_price"
            android:textSize="11sp"
            android:textColor="#FF680A"
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>