<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_good"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_below="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/size_65dp"
                android:layout_height="@dimen/size_65dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_alignTop="@id/imageView"
                android:id="@+id/RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_toRightOf="@+id/imageView">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_toRightOf="@id/imageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="134测试"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/size_12dp" />

                <TextView
                    android:id="@+id/tv_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_spec"
                    tools:text="10"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginLeft="@dimen/size_30dp"
                    android:layout_toLeftOf="@+id/tv_current_price"
                    android:layout_marginRight="@dimen/size_90dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#F6561A"
                    android:textSize="@dimen/size_15dp" />


                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_30dp"
                    android:layout_below="@+id/tv_spec"
                    tools:text="100"
                    android:textColor="#939393"
                    android:textSize="@dimen/size_15dp" />

                <TextView
                    android:layout_marginTop="@dimen/size_10dp"
                    android:id="@+id/tv_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_spec"
                    tools:text="10"
                    android:layout_alignParentRight="true"
                    android:textColor="#F6561A"
                    android:textSize="@dimen/size_15dp" />

                <TextView
                    android:id="@+id/coupon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/size_5dp"
                    android:text="惠"
                    android:textColor="@color/color_F6551A"
                    android:textSize="@dimen/size_13dp" />

                <TextView
                    android:id="@+id/Price"
                    android:visibility="gone"
                    android:layout_below="@+id/textSpe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/size_5dp"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="￥12.0"
                    android:textColor="@color/color_F6551A"
                    android:textSize="@dimen/size_13dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSpe"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_toLeftOf="@+id/Price"
                    android:visibility="gone"
                    android:padding="@dimen/size_5dp"
                    android:paddingBottom="@dimen/size_5dp"
                    android:textColor="@color/color_939393"
                    android:textSize="@dimen/size_13dp" />

                <!--没用-->



                <com.puyue.www.qiaoge.view.LineBreakLayout
                    android:visibility="gone"
                    android:id="@+id/lineBreakLayout"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSpe"
                    android:layout_alignLeft="@+id/textSpe"
                    android:layout_marginTop="5dp"
                    app:grivate="left"
                    app:isFull="false"
                    app:vertical_Space="10dp" />

                <TextView
                    android:text="规格"
                    android:layout_below="@+id/textTitle"
                    android:id="@+id/tv_spec"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv2"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_below="@+id/tv_spec"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lineBreakLayout"
                    android:layout_centerVertical="true">


                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_return_status"
                android:padding="2dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout"
                android:layout_marginLeft="@dimen/size_90dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:background="@drawable/detail_return_bg"
                tools:text="退款shenhe "
                android:textSize="11dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>