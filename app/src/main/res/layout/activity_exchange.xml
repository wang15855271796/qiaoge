<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_wallet">

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:src="@mipmap/ic_back_arrow_two" />

                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兑换优惠券"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/size_18dp" />



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rl"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="￥0.00"
                            android:id="@+id/tv_amount"
                            android:textColor="#ffffff"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/size_30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_amount"
                            android:text="可兑换金额"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/sp_16"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="一键兑换"
                            android:textColor="#ffffff"
                            android:padding="@dimen/size_5dp"
                            android:id="@+id/tv_exchange"
                            android:background="@drawable/shape_purple"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/size_35dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/sp_16"
                            android:layout_toRightOf="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_consume"
                            android:text="消费金额:0"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#666666"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:layout_marginLeft="@dimen/size_28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:background="#F4F4F4"
                            android:layout_marginTop="@dimen/size_17dp"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <TextView
                            android:text="兑换专区"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#45474B"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:layout_marginLeft="@dimen/size_28dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:visibility="gone"
                            android:background="@drawable/shouye"
                            android:layout_marginTop="@dimen/size_13dp"
                            android:layout_marginRight="@dimen/size_13dp"
                            android:layout_marginLeft="@dimen/size_13dp"
                            android:layout_width="match_parent"
                            android:layout_height="98dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv"
                                    android:layout_marginTop="@dimen/size_30dp"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="@dimen/size_27dp"
                                    android:text="请输入优惠券金额"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <EditText
                                    tools:text="100"
                                    android:id="@+id/et_num"
                                    android:layout_toRightOf="@+id/tv"
                                    android:layout_width="150dp"
                                    android:layout_marginTop="@dimen/size_20dp"
                                    android:layout_marginLeft="@dimen/size_20dp"
                                    android:gravity="center"
                                    android:background="@drawable/cart_add_bg"
                                    android:layout_height="@dimen/size_36dp" />

                                <TextView
                                    android:layout_below="@+id/tv"
                                    android:text="无门槛不限期优惠券"
                                    android:textColor="#FF6F08"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/size_27dp"
                                    android:textSize="@dimen/sp_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>


                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_marginTop="@dimen/size_20dp"
                            android:src="@mipmap/icon_add"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:background="#f9f9f9"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                        </LinearLayout>
                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginBottom="@dimen/size_17dp"
                android:id="@+id/bt_sure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_orange"
                android:text="确定"
                android:textColor="@color/app_color_white"
                android:textSize="18dp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>