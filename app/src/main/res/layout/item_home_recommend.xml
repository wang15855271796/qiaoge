<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_recommend"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_home_recommend_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_home_pic_orange"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="10dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_home_recommend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#232131"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_home_recommend_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp"
        android:textColor="#f54022"
        android:textSize="12dp" />
</LinearLayout>