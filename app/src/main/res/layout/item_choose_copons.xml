<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
>

    <LinearLayout
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/app_item_shadow"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_3dp"
            android:layout_marginRight="@dimen/size_2dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:background="@drawable/ic_coupon_bg"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_5dp"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/size_45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom">

                <TextView
                    android:text="@string/app_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/size_15dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@mipmap/ic_money_bag_yes" />
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_18dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="时间"
                android:textColor="@color/color_AAA8AB"
                android:textSize="@dimen/size_11dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/untime">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/app_my_coupons"
                    android:layerType="software"></View>
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/size_5dp"
                android:paddingBottom="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/color_979797"
                android:textSize="@dimen/size_11dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/LinearLayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/app_item_shadow"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_3dp"
            android:layout_marginRight="@dimen/size_2dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:background="@mipmap/coupons_no"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_5dp"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20dp" />

            <TextView
                android:id="@+id/unPriceNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/size_45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/unCouponsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/size_14dp" />

                <ImageView
                    android:id="@+id/unmoneyBag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@mipmap/ic_moner_no" />
            </LinearLayout>

            <TextView
                android:id="@+id/unCouponsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/app_black"
                android:textSize="@dimen/size_18dp" />

            <TextView
                android:id="@+id/unTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="时间"
                android:textColor="@color/color_AAA8AB"
                android:textSize="@dimen/size_11dp" />

            <LinearLayout
                android:id="@+id/LinearLayoutUnview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/untime">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/app_my_coupons"
                    android:layerType="software"></View>
            </LinearLayout>

            <TextView

                android:id="@+id/unNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/size_5dp"
                android:paddingBottom="@dimen/size_10dp"
                android:text="备注"
                android:textColor="@color/color_979797"
                android:textSize="@dimen/size_11dp" />

        </LinearLayout>


    </LinearLayout>

    <!--sssssssssss-->

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--灰底-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_grey"
            android:layout_marginLeft="@dimen/sp_12"
            android:layout_marginRight="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:background="@drawable/shape_grey1">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_10"
                android:textColor="#ffffff"
                tools:text="该券已用在本账户订单20200204122036-2255中使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <!--白底-->
        <RelativeLayout
            android:layout_marginLeft="@dimen/sp_12"
            android:layout_marginRight="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/shape_white1">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="￥"
                    android:id="@+id/tv_tip"
                    android:textColor="#F54022"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_alignBottom="@+id/tv_amount"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/size_20dp"
                    android:id="@+id/tv_amount"
                    android:textColor="#F54022"
                    tools:text="12"
                    android:layout_toRightOf="@+id/tv_tip"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/size_23dp"
                    android:layout_toRightOf="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_style"
                        android:layout_marginTop="@dimen/size_15dp"
                        tools:text="积分兑换"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize= "@dimen/sp_14"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_user_factor"
                        android:layout_marginTop="@dimen/size_5dp"
                        tools:text="200元无门槛消费券"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_marginTop="@dimen/size_15dp"
                        tools:text="2020.7.30  8:00—2020.7.31  9:00"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />

                <View
                    android:id="@+id/v"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_below="@+id/ll"
                    android:background="@drawable/app_my_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_3dp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_role"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_below="@+id/rl"
                tools:text="全场通用（仅限杭州市）"
                android:textColor="#999999"
                android:textSize="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>