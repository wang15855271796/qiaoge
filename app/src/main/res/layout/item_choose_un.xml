<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            tools:text="1.5/盒"
            android:layout_centerVertical="true"
            android:textColor="#FF680A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_unit"
            tools:text="(1箱10盒)"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_old_price"
            tools:text="(1箱10盒)"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="降价"
            android:id="@+id/tv_reduce"
            android:layout_centerVertical="true"
            android:textSize="8dp"
            android:textColor="#ffffff"
            android:paddingRight="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_search"
            android:padding="@dimen/size_5dp"
            android:background="@drawable/shape_greys"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="找相似"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_desc"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:background="@drawable/bg_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_coupon_desc"
            tools:text="111111111111"
            android:textColor="#FF680A"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>