<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/new_order_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="温馨提示"
        android:textColor="#ff333333"
        android:textSize="@dimen/size_21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_35dp"
        android:layout_marginRight="@dimen/size_35dp"
        android:text=" 确认收货后将无法申请售后"
        android:textColor="#ff666666"
        android:textSize="@dimen/size_18dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确保商品验收一致。"
        android:textColor="#ff666666"
        android:textSize="@dimen/size_18dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/size_35dp"
        android:background="#ffdbdbdb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/size_18dp"
            android:text="稍后再说"
            android:textColor="#ffe86b27"
            android:id="@+id/tv_cancel"
            android:textSize="@dimen/size_15dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ffdbdbdb" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/size_18dp"
            android:text="确认提货"
            android:textColor="#ffe86b27"
            android:textSize="@dimen/size_15dp" />

    </LinearLayout>
</LinearLayout>