<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white">

        </LinearLayout>

        <com.puyue.www.qiaoge.view.CompatToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_border_bottom_bg">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:text="账户原因"
                android:textColor="#232131"
                android:textSize="18dp" />

        </com.puyue.www.qiaoge.view.CompatToolbar>
        <!--android:fitsSystemWindows="true"-->
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/size_15dp"
                android:text="请选择或反馈注销原因"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/size_15dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<TextView-->
                    <!--android:text="其他"-->
                    <!--android:id="@+id/tv"-->
                    <!--android:layout_marginTop="@dimen/size_18dp"-->
                    <!--android:layout_marginLeft="@dimen/size_15dp"-->
                    <!--android:textSize="@dimen/size_18dp"-->
                    <!--android:textColor="#000000"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->


                <EditText
                    android:visibility="gone"
                    android:layout_below="@+id/tv"
                    android:layout_marginTop="@dimen/size_18dp"
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/app_feedback_bg"
                    android:gravity="top"
                    android:hint="请输入说明文字"
                    android:padding="10dp"
                    android:textColor="#999999"
                    android:textSize="14dp" />

                <TextView
                    android:layout_below="@+id/edit"
                    android:background="@drawable/shape_white_home"
                    android:id="@+id/tv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:text="提交"
                    android:layout_marginBottom="@dimen/size_25dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:gravity="center"
                    android:textColor="#FF5800"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    </LinearLayout>

</LinearLayout>