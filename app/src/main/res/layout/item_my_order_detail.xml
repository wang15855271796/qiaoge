<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_my_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_my_order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#737373"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_item_my_order_detail_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A7A7A7"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_my_order_detail_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="#232131"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/ll_item_my_order_detail"
        android:layout_height="@dimen/app_line_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/app_line_color" />
</RelativeLayout>