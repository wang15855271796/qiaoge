<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/iv_bg"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_item_spike_img"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
               />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
             />

        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_spike_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="逊谈起降价时逊谈起降价时逊谈起降价时逊谈起降价时"
                    android:textColor="@color/app_black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_item_spike_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:text="规格"
                    android:textColor="@color/color_C1C1C1"
                    android:textSize="10dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line">

                <RelativeLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_spike_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/color_FF703C"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_item_spike_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_item_spike_price"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_item_spike_price"
                        android:text="@string/app_name"
                        android:textColor="@color/color_747474"
                        android:textSize="10dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_below="@+id/lin"
                    android:layout_centerVertical="true">


                    <ProgressBar
                        android:id="@+id/pb_item_spike"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:progressDrawable="@drawable/layerlist_goods_progress"  />

                    <TextView
                        android:id="@+id/tv_item_spike_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/pb_item_spike"
                        android:gravity="right"
                        android:text="@string/app_name"
                        android:textColor="@color/color_9C9C9C"
                        android:textSize="@dimen/size_8dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/addCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/app_home_more"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="立即加购"
                        android:textColor="@color/white"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_sold_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_grey"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="已售罄"
                        android:textColor="@color/white"
                        android:textSize="11dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_add_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/app_home_more"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="立即加购"
                        android:textColor="@color/white"
                        android:textSize="11dp" />

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:id="@+id/rl_price"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_orange_radius_11"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_26dp">

                        <TextView
                            android:text="获取授权"
                            android:textColor="#fff"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:textSize="@dimen/size_12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>




            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>