<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_white1"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <RelativeLayout
                android:layout_marginRight="@dimen/size_18dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.puyue.www.qiaoge.RoundImageView
                    android:id="@+id/iv_pic"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:src="@mipmap/bg_emptys"
                    android:layout_width="@dimen/size_91dp"
                    android:layout_height="@dimen/size_91dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:text="店铺转让"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:text="店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让店铺转让"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@+id/tv_title"
                    android:id="@+id/tv_desc"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_toEndOf="@+id/iv_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    tools:text="店铺转让s"
                    android:layout_below="@+id/tv_desc"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_toRightOf="@+id/iv_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_desc"
                    android:text="1586人看过"
                    android:textSize="10sp"
                    android:textColor="#FF5C00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="#F1F1F1"
                android:layout_height="@dimen/public_space_value_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_status"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_status1"
                android:layout_marginLeft="@dimen/size_12dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_gantan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_toRightOf="@+id/iv_status"
                android:layout_centerVertical="true"
                android:text="信息已审核通过"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_status1"
                android:layout_toRightOf="@+id/iv_status1"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:text="删除信息"
                android:layout_toLeftOf="@+id/ll_change"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/size_3dp"
                android:paddingBottom="@dimen/size_3dp"
                android:background="@drawable/shape_black"
                android:id="@+id/tv_deleted"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_change"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="编辑信息"
                    android:background="@drawable/shape_black"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingBottom="@dimen/size_3dp"
                    android:id="@+id/tv_edit"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="查看"
                    android:background="@drawable/shape_black"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/size_3dp"
                    android:paddingBottom="@dimen/size_3dp"
                    android:id="@+id/tv_look"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>