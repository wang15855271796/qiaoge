<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_parent_top"
    android:visibility="gone"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_inSide_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_new_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:textStyle="bold"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/rb_must_common_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="必买清单"/>


                <RadioButton
                    android:textStyle="bold"
                    android:id="@+id/rb_new_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@null"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:text="新品上市"/>




                <RadioButton
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:checked="false"
                    android:id="@+id/rb_info_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="降价商品"/>

                <RadioButton
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:checked="false"
                    android:id="@+id/rb_common_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="常用清单"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v2s"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_45dp"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_marginRight="@dimen/size_30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#17BD60"
                android:gravity="center_horizontal"
                android:layout_height="3dp" />

            <View
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_45dp"
                android:id="@+id/v1s"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_marginRight="@dimen/size_30dp"
                android:background="#17BD60"
                android:gravity="center_horizontal"
                android:layout_height="3dp" />

            <View
                android:id="@+id/v3s"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_45dp"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_marginRight="@dimen/size_30dp"
                android:layout_weight="1"
                android:background="#17BD60"
                android:gravity="center_horizontal"
                android:layout_height="3dp" />

            <View
                android:id="@+id/v4s"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_marginRight="@dimen/size_30dp"
                android:background="#17BD60"
                android:gravity="center_horizontal"
                android:layout_height="3dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>