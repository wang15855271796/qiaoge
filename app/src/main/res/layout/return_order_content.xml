<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:orientation="vertical"
    android:background="@drawable/new_order_bg"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView

        android:layout_marginTop="@dimen/size_29dp"
        android:textColor="#ff333333"
        android:textSize="@dimen/size_21dp"
        android:text="退款说明"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:textColor="#ff666666"
        android:textSize="@dimen/size_18dp"
        android:id="@+id/tv_order_content"
     android:layout_marginRight="@dimen/size_8dp"
        android:layout_marginLeft="@dimen/size_8dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="#ffe86b27"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/tv_ok"
        android:padding="@dimen/size_18dp"
      android:gravity="center"
        android:textColor="#ffe86b27"
        android:textSize="@dimen/size_18dp"
    android:text="我知道了 "

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>