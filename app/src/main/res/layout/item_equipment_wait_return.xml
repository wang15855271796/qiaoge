<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_border_bottom_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_item_equipment_wait_return_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_item_equipment_wait_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/app_equipment_all_select"
            android:button="@null"
            android:clickable="false"
            android:enabled="false" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_item_equipment_wait_return_jump"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_equipment_wait_return_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_top_bar_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_item_equipment_wait_return_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ADADAD"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_equipment_wait_return_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_mine_arrow" />
    </RelativeLayout>
</LinearLayout>