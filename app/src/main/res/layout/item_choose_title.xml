<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:background="@drawable/app_equipment_all_select"
            android:button="@null" />

        <TextView
            android:id="@+id/tv_spec"
            android:text="规格：300"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cb_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_stock"
            android:text="库存(300)"
            android:textColor="#666666"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="（库存不足）"
            android:textColor="#F6551A"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>