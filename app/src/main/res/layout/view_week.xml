<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="日"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_sunday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="一"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_monday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="二"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_tuesday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="三"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_wednesday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="四"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_thursday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="五"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_friday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="六"
            android:textColor="@color/app_front_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_view_satusday"
            android:layout_width="10dp"
            android:layout_height="4dp"
            android:background="@mipmap/icon_week_subscript"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
