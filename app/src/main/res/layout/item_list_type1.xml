<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/shouye_bg_long"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="烧烤专区"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_small_title"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/shape_white"
            android:textSize="@dimen/dp_10"
            android:paddingRight="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="#FF6C73"
            android:text="好吃经济又实惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_below="@+id/tv_small_title"
            android:src="@drawable/icon_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_toRightOf="@+id/iv"
            android:layout_marginLeft="@dimen/size_60dp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">

            <com.puyue.www.qiaoge.RoundImageView
                android:id="@+id/iv_type1"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_type2"
                android:layout_marginLeft="@dimen/size_25dp"
                android:layout_marginRight="@dimen/size_7dp"
                android:layout_width="@dimen/size_62dp"
                android:layout_height="@dimen/size_62dp" />

            <com.puyue.www.qiaoge.RoundImageView
                android:id="@+id/iv_type2"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_type3"
                android:layout_marginLeft="@dimen/size_25dp"
                android:layout_width="@dimen/size_62dp"
                android:layout_height="@dimen/size_62dp" />

            <com.puyue.www.qiaoge.RoundImageView
                android:id="@+id/iv_type3"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_width="@dimen/size_62dp"
                android:layout_height="@dimen/size_62dp" />
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>