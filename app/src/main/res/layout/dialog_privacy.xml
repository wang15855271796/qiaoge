<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_margin="@dimen/size_22dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:gravity="center_horizontal"
            android:text="翘歌隐私政策"
            android:textColor="#333333"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/webView"
            android:layout_marginLeft="@dimen/size_15dp"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/size_10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:button="@null"
                android:background="@drawable/select_checkbox"
                android:layout_width="@dimen/size_16dp"
                android:layout_height="@dimen/size_16dp" />

            <TextView
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已经阅读"
                android:textColor="#ff858585"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《翘歌隐私政策》"
                android:textColor="#F56D23"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="(5s)"
                android:textColor="#F56D23"
                android:textSize="14dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:id="@+id/ll_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@drawable/shape_orange"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:text="同意并继续"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>