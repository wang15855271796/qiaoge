<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

  >

    <RelativeLayout
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_goods_evaluation"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:src="@mipmap/icon_default_oval_header" />

        <TextView
            android:id="@+id/tv_item_goods_evaluation_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_toRightOf="@id/iv_item_goods_evaluation"
            android:textColor="#ff333333"
            android:text="11"
            android:textSize="@dimen/size_14dp" />

        <TextView
            android:text="11"
            android:id="@+id/tv_item_goods_evaluation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_goods_evaluation_number"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_toRightOf="@id/iv_item_goods_evaluation"

            android:textColor="@color/color_9C9C9C"
            android:textSize="@dimen/size_11dp" />


        <com.puyue.www.qiaoge.view.StarBarView
            android:id="@+id/sbv_star_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_toRightOf="@id/tv_item_goods_evaluation_number"
            app:space_width="10dp"
            app:star_height="18dp"
            app:star_hollow="@mipmap/ic_wu_star"
            app:star_isIndicator="false"
            app:star_max="5"

            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@mipmap/ic_star"
            app:star_width="18dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_evaluate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_15dp"
            android:textColor="#ff999999"
            android:textSize="@dimen/size_12dp" />

    </RelativeLayout>

    <TextView
        android:text="11"
        android:layout_marginRight="@dimen/size_10dp"
        android:id="@+id/tv_item_goods_evaluation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_70dp"
        android:layout_marginTop="15dp"
        android:textColor="#626262"
        android:textSize="@dimen/size_11dp" />

    <LinearLayout
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_8dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size_60dp"
            android:id="@+id/recyclerView_image"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_marginLeft="@dimen/size_70dp"
            android:id="@+id/tv_item_goods_evaluation_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_evaluation_box"
            android:padding="12dp"
            android:textColor="#7F7F7F"
            android:textSize="@dimen/size_11dp" />
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_size"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/app_line_color" />

</LinearLayout>