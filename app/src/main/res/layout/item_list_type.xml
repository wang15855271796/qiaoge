<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:background="@drawable/shouye_red_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:text="烧烤专区"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_small_title"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/shape_white"
            android:textSize="@dimen/dp_10"
            android:paddingRight="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="#FF6C73"
            android:text="好吃经济又实惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_below="@+id/tv_small_title"
            android:src="@drawable/icon_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.puyue.www.qiaoge.RoundImageView
            android:id="@+id/iv_pic"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_toRightOf="@+id/tv_small_title"
            android:layout_marginRight="@dimen/size_7dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_width="@dimen/size_62dp"
            android:layout_height="@dimen/size_62dp" />
    </RelativeLayout>
</LinearLayout>