<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <com.puyue.www.qiaoge.banner.Banner
                            android:id="@+id/banner_activity_common"
                            android:layout_width="match_parent"
                            android:layout_height="325dp"
                            app:layout_collapseMode="parallax" />

                    </FrameLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textViewTitleSpike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="商品详情"
                            android:textColor="@color/app_top_bar_text"
                            android:textSize="18dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color_white"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:background="@mipmap/ic_black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_60dp">

                            <TextView
                                android:id="@+id/tv_name"
                                tools:text="组合特卖"
                                android:textColor="#ffffff"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_toRightOf="@+id/tv_name"
                                android:id="@+id/tv_limit_num"
                                tools:text="限购20"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_alignBaseline="@+id/tv_name"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_time"
                                tools:text="12月12日12:12:59开抢 "
                                android:layout_marginRight="@dimen/size_10dp"
                                android:textColor="#ffffff"
                                android:textSize="13sp"
                                android:layout_alignBaseline="@+id/tv_name"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.puyue.www.qiaoge.view.SnapUpCountDownTimerView
                                android:visibility="gone"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:id="@+id/tv_cut_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp" />

                            <RelativeLayout
                                android:id="@+id/rl_price"
                                android:layout_below="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="￥"
                                    android:id="@+id/tv"
                                    android:textColor="#ffffff"
                                    android:layout_marginLeft="@dimen/size_15dp"
                                    android:layout_alignBaseline="@+id/tv_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_price"
                                    tools:text="700"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/size_24dp"
                                    android:layout_toRightOf="@+id/tv"
                                    android:layout_marginLeft="@dimen/size_3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/old_price"
                                    tools:text="700"
                                    android:layout_toRightOf="@+id/tv_price"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/size_13dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="@dimen/size_15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_desc_price"
                                android:visibility="gone"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/sp_16"
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:layout_marginTop="@dimen/sp_12"
                                android:layout_below="@+id/tv_name"
                                android:text="价格授权后可见"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <RelativeLayout
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <ProgressBar
                                    android:id="@+id/pb"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_marginTop="@dimen/size_12dp"
                                    android:layout_width="80dp"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="5dp"
                                    android:progressDrawable="@drawable/layerlist_goods_progress" />


                                <TextView
                                    android:id="@+id/tv_surplus"
                                    tools:text="剩余"
                                    android:textColor="#ffffff"
                                    android:layout_toRightOf="@+id/pb"
                                    android:textSize="@dimen/size_13dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginLeft="@dimen/size_5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginRight="145dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="标题"
                                    android:textStyle="bold"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/size_15dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_activity_common_inven"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_20dp"
                                android:layout_toLeftOf="@+id/tv_sale"
                                tools:text="余量"
                                android:textColor="@color/color_8B8B8B"
                                android:textSize="@dimen/size_11dp" />

                            <TextView
                                android:id="@+id/tv_sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_20dp"
                                tools:text="销量"
                                android:textColor="@color/color_8B8B8B"
                                android:textSize="@dimen/size_11dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_spec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="规格:1000"
                                android:background="@color/app_color_white"
                                android:textColor="#9D9D9D"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/size_20dp"
                                tools:text="购物车数量"
                                android:background="@color/app_color_white"
                                android:textColor="#9D9D9D"
                                android:textSize="10dp" />

                            <RelativeLayout
                                android:id="@+id/rl_share"
                                android:layout_marginRight="@dimen/size_10dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="@dimen/size_20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/ImageViewShare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_share" />

                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="@dimen/size_20dp"
                                    android:layout_below="@+id/ImageViewShare"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="分享"
                                    android:textColor="#F6551A"
                                    android:textSize="10dp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_vip"
                            android:visibility="gone"
                            android:src="@mipmap/icon_vip"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="选择规格"
                            android:textColor="#333333"
                            android:textSize="@dimen/size_13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <TextView
                                android:id="@+id/tv_activity_special_group_price"
                                android:layout_width="0dp"
                                tools:text="原价：100"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#333333"
                                android:textSize="@dimen/size_14dp" />

                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="0dp"
                                tools:text="原价：100"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/size_11dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/tv_activity_special_sub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/app_reduce" />

                                <TextView
                                    android:id="@+id/tv_activity_special_amount"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/app_front_black"
                                    android:textSize="15dp" />

                                <ImageView
                                    android:id="@+id/tv_activity_special_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:src="@mipmap/app_add" />
                            </LinearLayout>
                        </LinearLayout>

                        <!--产品说明-->
                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:paddingTop="@dimen/size_15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="产品说明："
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_toRightOf="@+id/tv1"
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="产品说明"
                                android:layout_marginRight="@dimen/size_15dp"
                                android:textColor="#292621"
                                android:layout_marginBottom="@dimen/size_15dp"
                                android:textSize="12dp" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/app_bg_gray" />


                        <include layout="@layout/activity_special_common" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="80dp">

        <android.support.v7.widget.Toolbar
            android:layout_marginTop="@dimen/size_20dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:layout_collapseMode="pin"

            >

            <RelativeLayout
                android:alpha="0.4"
                android:background="@drawable/shape_grey"
                android:layout_width="40dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                >

                <ImageView
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_activity_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_back_arrow" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:id="@+id/ll_service"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFF3C1"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_city"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="该商品为宁波地区商品，请切换到该地区购买"
                    android:textSize="12dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:paddingTop="12dp"
                    android:textColor="#666666"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <TextView
                android:id="@+id/tv_change"
                android:drawablePadding="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即切换"
                android:paddingTop="@dimen/size_12dp"
                android:paddingBottom="@dimen/size_12dp"
                android:drawableRight="@mipmap/qg_cart_jump"
                android:textColor="#FFF6551A"
                android:textSize="12dp" />

        </RelativeLayout>




    </LinearLayout>
    <include layout="@layout/view_include_common_detail" />
</LinearLayout>