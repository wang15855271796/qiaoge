<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_root"
        android:background="@drawable/shouye"
        android:layout_marginTop="@dimen/size_13dp"
        android:layout_marginRight="@dimen/size_13dp"
        android:layout_marginLeft="@dimen/size_13dp"
        android:layout_width="match_parent"
        android:layout_height="98dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv"
                android:layout_marginTop="@dimen/size_30dp"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                android:layout_marginLeft="@dimen/size_27dp"
                android:text="请输入优惠券金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et"
                tools:text="100"

                android:inputType="number|numberDecimal"
                android:imeOptions=""
                android:layout_toRightOf="@+id/tv"
                android:layout_width="150dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:gravity="center"
                android:background="@drawable/cart_add_bg"
                android:layout_height="@dimen/size_36dp" />

            <TextView
                android:layout_below="@+id/tv"
                android:text="无门槛不限期优惠券*1"
                android:textColor="#FF6F08"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/size_27dp"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_below="@+id/et"
                android:padding="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_clear_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>