<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/cart_item_good_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <CheckBox
                android:visibility="gone"
                android:id="@+id/cb_item_out"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:background="@drawable/app_equipment_all_select"
                android:button="@null" />


            <ImageView
                android:id="@+id/iv_head"
                android:src="@mipmap/ic_launcher"
                android:layout_toRightOf="@+id/cb_item_cart"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY" />

            <ImageView
                tools:text="销量1000"
                android:id="@+id/iv_flag"
                android:layout_toRightOf="@+id/cb_item_cart"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="44dp"
                android:textColor="#333333"
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_head"
                android:textColor="#333333"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/sp_12"
                android:text="【妙可蓝多】精致马苏里里苏里里苏奶马苏里奶"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                tools:text="110"
                android:id="@+id/tv_price"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/size_44dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_search"
                android:padding="@dimen/size_5dp"
                android:background="@drawable/shape_greys"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="找相似"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>