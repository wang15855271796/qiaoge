<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_95dp"
    android:layout_height="@dimen/size_95dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_comment_image"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_evaluvate" />

    <LinearLayout
        android:id="@+id/ll_del"
        android:layout_width="30dp"
        android:layout_height="35dp"
android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/delete_pic" />
    </LinearLayout>
</FrameLayout>