<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_group"
        android:orientation="vertical"
        android:background="@drawable/shape_white1"
        android:layout_width="237dp"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/iv_sale_done"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_margin="@dimen/size_5dp"
                tools:src="@mipmap/icon_baidu"
                android:layout_width="@dimen/size_88dp"
                android:layout_height="@dimen/size_88dp" />

            <ImageView
                android:id="@+id/iv_order"
                android:layout_margin="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_coupon"
                android:background="@drawable/shape_ring"
                android:layout_width="30dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="@dimen/size_60dp"
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                >

                <TextView
                    tools:text="30"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_coupon"
                    android:textSize="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_back_arrow" />

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            tools:text="销量1000"
            android:paddingLeft="5dp"
            android:id="@+id/tv_sale"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingRight="@dimen/size_5dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#333333"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/size_10dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/rl_pic"
            android:textSize="@dimen/sp_16"
            tools:text="华清源腿排腿排华排..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="5.2折"
            android:id="@+id/tv_discount"
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/rl_pic"
            android:textColor="#ffffff"
            android:paddingRight="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_5dp"
            android:textSize="@dimen/size_10dp"
            android:background="@drawable/shape_coupon_reds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="￥"
            android:visibility="gone"
            android:id="@+id/tv_tip"
            android:layout_marginTop="@dimen/size_44dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/rl_pic"
            android:textSize="@dimen/size_15dp"
            android:textColor="#FFFF5C00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="15.0"
            android:textColor="#FF5000"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/tv_tip"
            android:layout_toRightOf="@+id/tv_tip"
            android:layout_marginTop="@dimen/size_32dp"
            android:textSize="@dimen/size_21dp"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="15.0"
            android:visibility="gone"
            android:textColor="#969696"
            android:layout_toRightOf="@+id/rl_pic"
            android:id="@+id/tv_old_price"
            android:layout_marginTop="@dimen/size_8dp"
            android:textSize="@dimen/size_12dp"
            android:layout_below="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#FF5000"
            android:visibility="gone"
            android:layout_toRightOf="@+id/rl_pic"
            android:id="@+id/tv_desc"
            android:layout_below="@+id/tv_name"
            android:textSize="@dimen/sp_14"
            android:text="价格授权后可见"
            android:layout_marginTop="@dimen/size_38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_add"
            android:src="@mipmap/app_add"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/size_38dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>