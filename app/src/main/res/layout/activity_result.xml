<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white">

            </LinearLayout>

            <com.puyue.www.qiaoge.view.CompatToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_border_bottom_bg">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:text="账户注销"
                    android:textColor="#232131"
                    android:textSize="18dp" />

            </com.puyue.www.qiaoge.view.CompatToolbar>

            <TextView
                android:text="请验证已绑定手机号："
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_18dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="187"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="18dp" />

                <View
                    android:background="#EFEFEF"
                    android:layout_marginRight="@dimen/sp_16"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_marginLeft="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLength="11"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    android:textColor="#232131"
                    android:textColorHint="#D5D5D5"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/ll_yzm"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_yzm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_orange_border"
                        android:gravity="center"
                        android:padding="@dimen/size_7dp"
                        android:text="获取验证码"
                        android:textColor="#F56D23"
                        android:textSize="12dp" />
                </RelativeLayout>
                <View
                    android:background="#EFEFEF"
                    android:layout_marginRight="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/sp_16"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>

            <TextView
                android:text="请输入登录密码："
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_18dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入登录密码"
                    android:singleLine="true"
                    android:textColor="#232131"
                    android:textColorHint="#D5D5D5"
                    android:textSize="15dp" />

                <View
                    android:background="#EFEFEF"
                    android:layout_marginRight="@dimen/sp_16"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            </RelativeLayout>

            <TextView
                android:layout_below="@+id/edit"
                android:background="@drawable/shape_white_home"
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:text="提交"
                android:layout_marginBottom="@dimen/size_25dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:gravity="center"
                android:textColor="#FF5800"
                android:textSize="16sp"
                />
        </LinearLayout>


    </ScrollView>
</LinearLayout>