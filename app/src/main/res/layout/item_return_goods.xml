<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/app_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_return_goods_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_item_return_goods"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:background="@drawable/app_equipment_all_select"
            android:button="@null"
            android:clickable="false"
            android:enabled="false" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_item_return_goods_img"
                android:layout_width="88dp"
                android:layout_height="83dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_item_return_goods_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_return_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_top_bar_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_item_return_goods_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#A7A7A7"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_item_return_goods_img"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_item_return_goods_img"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_return_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A7A7A7"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_item_return_goods_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#A7A7A7"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_item_return_goods_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#A7A7A7"
                    android:textSize="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_return_goods_standard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


</LinearLayout>
