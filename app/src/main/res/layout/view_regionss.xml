<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white4"
    android:orientation="vertical">


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_63dp">

        <TextView
            android:text="当前位置:"
            android:id="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/size_11dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv"
            android:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_area"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="更新定位"
            android:id="@+id/tv_reset"
            android:layout_marginRight="@dimen/size_17dp"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_alignParentRight="true"
            android:textColor="#FF2925"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="321dp"
                android:cacheColorHint="@color/no_color"
                android:layout_weight="1"
                android:scrollbars="none"
                android:dividerHeight="1px"
                android:divider="#eeeeee"
                android:background="@color/white" >
            </ListView>

            <View
                android:background="#cccccc"
                android:layout_width="@dimen/public_space_value_0.5"
                android:layout_height="match_parent"/>

            <ListView
                android:id="@+id/listView2"
                android:layout_width="match_parent"
                android:layout_height="321dp"
                android:cacheColorHint="@color/no_color"
                android:layout_weight="1"
                android:scrollbars="none"
                android:dividerHeight="1px"
                android:divider="#eeeeee"
                android:background="@drawable/shape_white4" >

            </ListView>

        </LinearLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/lav_activity_loading"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            style="@style/AVLoadingIndicatorView.Large"
            app:indicatorColor="#f40"
            />



</LinearLayout>