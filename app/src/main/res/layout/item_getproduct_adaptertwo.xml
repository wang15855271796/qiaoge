<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_no_data"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热狗香肠真棒热狗香肠"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/rl"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_spec"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格：300g/500g/800g"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_stock_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存：300"
                    android:layout_below="@+id/tv_spec"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存：300"
                    android:layout_below="@+id/tv_stock_total"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#666"
                    android:textSize="10sp" />



                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100.00—￥100.00"
                    android:layout_below="@+id/tv_sale"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:layout_toRightOf="@+id/rl"
                    android:textColor="#FF703C"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_choose_spec"
                    android:text="选规格"
                    android:textColor="#fff"
                    android:padding="@dimen/size_6dp"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:background="@drawable/shape_orange_radius_11"
                    android:textSize="@dimen/size_11dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/v"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"/>

            <com.puyue.www.qiaoge.view.ExpandLayout
                android:id="@+id/expanded"
                android:clickable = "true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:text="规格"
                            android:id="@+id/tv"
                            android:layout_marginLeft="15dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_toRightOf="@+id/tv"
                            android:text="最多享受666包"

                            android:layout_marginLeft="15dp"
                            android:textColor="#666666"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.puyue.www.qiaoge.view.FlowLayout
                            android:layout_below="@+id/tv_desc"
                            android:id="@+id/fl_container"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"/>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1dp"/>

                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="售价信息"
                            android:id="@+id/tv1"

                            android:layout_marginLeft="15dp"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_stock"
                            android:layout_toRightOf="@+id/tv1"
                            android:text="库存：300"

                            android:layout_marginLeft="15dp"
                            android:textColor="#666666"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_below="@+id/tv_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </com.puyue.www.qiaoge.view.ExpandLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>