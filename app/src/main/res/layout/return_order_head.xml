<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_15dp"
        android:background="@mipmap/ic_new_order_head_bg"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_return_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_24dp"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvOrderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_15dp"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/size_8dp"
            android:gravity="center_horizontal"
            android:text="待审核"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18dp"
          />


        <TextView
            android:id="@+id/tvOrderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_12dp"
           />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_cancel_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_15dp"
            android:src="@mipmap/ic_cancel_return"
         />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_cancel_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="申请已撤销"
            android:textColor="@color/white"
            android:textSize="@dimen/size_26dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_view_icon" />
</LinearLayout>