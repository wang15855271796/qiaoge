<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:background="@drawable/app_my_wallet_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_85dp">

            <TextView
                android:id="@+id/tv0"
                android:text="消费金额设置"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/sp_12"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="@dimen/dp_10"
                android:id="@+id/iv_close"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_login_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv"
                android:layout_below="@+id/tv0"
                android:text="单日最高消费金额："
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/size_25dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_amount"
                android:background="@null"
                android:inputType="number"
                android:layout_below="@+id/tv0"
                android:layout_toRightOf="@+id/tv"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入金额"
                android:layout_marginLeft="@dimen/size_5dp"
                android:textSize="@dimen/size_14dp" />

            <View
                android:layout_width="match_parent"
                android:background="#F0F0F0"
                android:id="@+id/v1"
                android:layout_toRightOf="@+id/tv"
                android:layout_below="@+id/ed_amount"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="100dp"
                android:layout_height="@dimen/size_1dp"/>


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swipe"
                android:layout_below="@+id/tv0"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:textColor="#cccccc"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/size_20dp"
            android:text="开启后，该账号单日消费不得超过最*高消费金额*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_below="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="@dimen/size_100dp"
            android:gravity="center"
            android:background="@drawable/confirm_dialog_bg"
            android:text="确认"
            android:layout_marginTop="@dimen/size_25dp"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>