<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:boy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    xmlns:wheelSurfView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/smart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.scwang.smartrefresh.header.MaterialHeader
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="?attr/actionBarSize"/>

                    <android.support.design.widget.CoordinatorLayout
                        android:id="@+id/coordinator"
                        android:fitsSystemWindows="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.AppBarLayout
                            android:id="@+id/appbar"
                            android:fitsSystemWindows="false"
                            boy:elevation="0dp"
                            app:layout_behavior="com.yuruiyin.appbarlayoutbehavior.AppBarLayoutBehavior"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f9f9f9">

                            <android.support.design.widget.CollapsingToolbarLayout
                                android:id="@+id/AppFragment_CollapsingToolbarLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                                app:contentScrim="?attr/colorPrimary">

                                <LinearLayout
                                    boy:layout_scrollFlags="scroll|exitUntilCollapsed"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fitsSystemWindows="false">

                                            <ImageView
                                                android:id="@+id/iv_bg"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/shouye_bg"
                                                app:layout_collapseMode="parallax"
                                                app:layout_collapseParallaxMultiplier="1" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                >

                                                <RelativeLayout
                                                    android:id="@+id/rl_home_top_search"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="120dp"

                                                    >

                                                    <ImageView
                                                        android:id="@+id/iv"
                                                        android:layout_marginLeft="15dp"
                                                        android:src="@drawable/ic_address"
                                                        android:layout_width="13dp"
                                                        android:layout_centerVertical="true"
                                                        android:layout_height="@dimen/size_17dp" />

                                                    <TextView
                                                        android:layout_toRightOf="@+id/iv"
                                                        android:layout_centerVertical="true"
                                                        android:id="@+id/tv_city"
                                                        android:layout_marginLeft="@dimen/size_5dp"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        tools:text="杭州.余杭区"
                                                        android:textColor="#ffffff"
                                                        android:textSize="18dp" />

                                                    <ImageView
                                                        android:layout_marginLeft="@dimen/size_5dp"
                                                        android:layout_marginTop="@dimen/size_62dp"
                                                        android:layout_toRightOf="@+id/tv_city"
                                                        android:src="@mipmap/ic_home_location_img"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content" />

                                                    <RelativeLayout
                                                        android:layout_alignParentRight="true"
                                                        android:layout_centerVertical="true"
                                                        android:id="@+id/rl_message"
                                                        android:layout_width="@dimen/size_60dp"
                                                        android:layout_height="30dp"
                                                        android:layout_weight="1">

                                                        <ImageView
                                                            android:id="@+id/homeMessage"
                                                            android:layout_centerInParent="true"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:src="@mipmap/ic_mine_email"  />

                                                        <TextView
                                                            android:text="4"
                                                            android:id="@+id/tv_num"
                                                            android:layout_width="wrap_content"
                                                            android:layout_marginLeft="-2dp"
                                                            android:textColor="@color/white"
                                                            android:textSize="9dp"
                                                            android:visibility="gone"
                                                            android:background="@drawable/bg_msg_count"
                                                            android:layout_toRightOf="@+id/homeMessage"
                                                            android:layout_height="wrap_content" />

                                                    </RelativeLayout>

                                                    <TextView
                                                        android:layout_marginTop="@dimen/sp_14"
                                                        android:layout_marginLeft="@dimen/dp_10"
                                                        android:layout_marginRight="@dimen/dp_10"
                                                        android:layout_below="@+id/tv_city"
                                                        android:layout_centerVertical="true"
                                                        android:id="@+id/tv_search"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="@dimen/size_33dp"
                                                        android:background="@drawable/shape_goods_progress_fill"
                                                        android:drawableLeft="@mipmap/ic_market_search"
                                                        android:drawablePadding="@dimen/size_10dp"
                                                        android:paddingLeft="120dp"
                                                        android:paddingTop="8dp"
                                                        android:paddingBottom="8dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:text="@string/inputCommodityName"
                                                        android:textColor="#666666"
                                                        android:textSize="@dimen/size_14dp" />

                                                </RelativeLayout>

                                            </LinearLayout>

                                        </RelativeLayout>


                                        <LinearLayout
                                            android:layout_marginTop="110dp"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <com.puyue.www.qiaoge.banner.Banner
                                                    android:id="@+id/banner"
                                                    android:layout_marginTop="@dimen/size_30dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="142dp"
                                                    android:layout_marginLeft="@dimen/dp_10"
                                                    android:layout_marginRight="@dimen/dp_10"
                                                    />

                                                <com.puyue.www.qiaoge.RoundImageView
                                                    android:id="@+id/iv_empty"
                                                    android:scaleType="fitXY"
                                                    android:layout_marginLeft="@dimen/dp_10"
                                                    android:layout_marginRight="@dimen/dp_10"
                                                    android:visibility="gone"
                                                    android:layout_marginTop="@dimen/size_30dp"
                                                    android:src="@drawable/default_bg"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="142dp" />
                                            </RelativeLayout>


                                            <ImageView
                                                android:id="@+id/iv_pic"
                                                android:layout_marginLeft="@dimen/size_50dp"
                                                android:layout_marginRight="@dimen/size_50dp"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/size_30dp" />
                                            <!--<include layout="@layout/home_tip_iv"/>-->
                                            <android.support.v7.widget.RecyclerView
                                                android:id="@+id/rv_icon"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:minHeight="80dp"
                                                android:paddingTop="5dp"
                                                android:paddingBottom="10dp" />


                                            <LinearLayout
                                                android:id="@+id/ll_driver"
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <com.taobao.library.VerticalBannerView
                                                    android:id="@+id/verticalBanner"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    app:animDuration="700"
                                                    app:gap="2000"/>
                                            </LinearLayout>

                                            <LinearLayout
