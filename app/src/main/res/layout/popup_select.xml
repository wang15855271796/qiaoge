<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:paddingTop="@dimen/size_19dp"
        android:text="筛选类别"
        android:textColor="#ff333333"
        android:textSize="@dimen/size_16dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_5dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_one">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="#ffffeae1"
        android:gravity="center"
        android:padding="@dimen/size_5dp"
        android:text="取消"
        app:layout_constraintRight_toLeftOf="@id/tv_ok"
        android:textColor="#ffff5000"
        android:textSize="@dimen/size_18dp"
   app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_select"
        app:layout_constraintVertical_weight="1" />

    <TextView

        android:background="#ffff680a"
        android:id="@+id/tv_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_30dp"
        android:textSize="@dimen/size_18dp"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        app:layout_constraintTop_toBottomOf="@id/rl_select"
        app:layout_constraintVertical_weight="1" />


</android.support.constraint.ConstraintLayout>