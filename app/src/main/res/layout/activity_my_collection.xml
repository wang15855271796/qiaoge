<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_white"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back_arrow" />

            <TextView
                android:text="我的收藏"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/app_top_bar_text"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/rl_num"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/size_60dp"
                android:layout_height="@dimen/size_48dp">

                <ImageView
                    android:id="@+id/iv_carts"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_tab_cart_unable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_carts"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:background="@drawable/shape_car_num"
                    android:gravity="center"
                    tools:text="9"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="7dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_good_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp">


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_good_cart" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_activity_goods_title_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="筛选"

                android:textColor="@color/app_front_black"
                android:textSize="15dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_my_collection_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f4f4f4" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp">

            <TextView
                android:text="全部"
                android:id="@+id/tv_all"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_buy"
                android:text="已买过"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_all"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="管理"
                android:id="@+id/tv_manger"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/smart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.scwang.smartrefresh.header.MaterialHeader
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="?attr/actionBarSize"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_my_collection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_no_data"
                android:src="@mipmap/ic_no_data"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/lav_activity_loading"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                style="@style/AVLoadingIndicatorView.Large"
                app:indicatorColor="#f40"
                />

            <RelativeLayout
                android:id="@+id/rl_foot"
                android:visibility="gone"
                android:background="#F4F4F4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_84dp">

                <LinearLayout
                    android:id="@+id/ll_collection_all_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cb_collection_all_select"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/app_equipment_all_select"
                        android:button="@null"
                        android:clickable="false"
                        android:enabled="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="全选"
                        android:textColor="@color/app_top_bar_text"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_collection_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="删除"
                    android:textColor="#A7A7A7"
                    android:textSize="15dp" />

            </RelativeLayout>

        </RelativeLayout>

</LinearLayout>