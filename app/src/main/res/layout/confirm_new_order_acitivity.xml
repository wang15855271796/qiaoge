<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:background="@drawable/confirm_new_order">

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_new_order"
        app:navigationIcon="@mipmap/ic_back_arrow_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单确认"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/confirm_new_order">

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_53dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"

                android:background="@drawable/confirm_order_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_deliver_order_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_weight="1"
                    android:background="@drawable/confirm_order_bg_two"
                    android:gravity="center"

                    android:paddingTop="@dimen/size_15dp"
                    android:paddingBottom="@dimen/size_15dp"
                    android:text="订单配送"

                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_deliver_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/order_bg_one"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_15dp"
                    android:paddingBottom="@dimen/size_15dp"
                    android:text="订单配送"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/size_16dp" />

                <TextView
                    android:id="@+id/tv_sufficiency_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/confirm_order_bg_one"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_15dp"
                    android:paddingBottom="@dimen/size_15dp"
                    android:text="到仓自提(免运费)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16dp" />

                <TextView
                    android:id="@+id/tv_sufficiency_order_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/order_bg_two"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_15dp"
                    android:paddingBottom="@dimen/size_15dp"
                    android:text="到仓自提(免运费)"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/size_16dp"
                    android:visibility="gone" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fr_confirm_oder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
              >

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>