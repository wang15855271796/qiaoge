<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">

        <TextView
            android:text="请选择发布位置"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_login_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp">

        <TextView
            android:text="当前位置:"
            android:id="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_provice"
            android:layout_toRightOf="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_city"
            android:layout_toRightOf="@+id/tv_provice"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>



</LinearLayout>