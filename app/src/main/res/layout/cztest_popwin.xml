<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/size_15dp"
            android:id="@+id/textView1"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_white_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_13dp"
            android:paddingRight="@dimen/size_13dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="取消"
            android:textColor="#F56D23"
            android:textSize="17sp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="请选择配送时间段"
            android:textColor="#F56D23"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/size_13dp"
            android:paddingRight="@dimen/size_13dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:background="@drawable/shape_red_order"
            android:text="确定"
            android:layout_marginRight="@dimen/size_8dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />



    </RelativeLayout>


    <com.puyue.www.qiaoge.fragment.order.WheelView
        android:id="@+id/wheelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:gravity="center" />


</LinearLayout>



