<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_63dp">

        <TextView
            android:text="当前位置:"
            android:id="@+id/tv"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/size_11dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv"
            android:text="当前位置:"
            android:textStyle="bold"
            android:id="@+id/tv_provice"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="更新定位"
            android:layout_marginRight="@dimen/size_17dp"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_alignParentRight="true"
            android:textColor="#FF2925"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <View
            android:layout_marginRight="@dimen/size_18dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#CCCCCC"
            android:layout_height="@dimen/public_space_value_0.5"/>
    </RelativeLayout>



</LinearLayout>